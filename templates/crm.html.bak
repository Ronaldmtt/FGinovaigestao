        if (badge) {
            badge.textContent = count;
        }
    });
}

function viewLeadDetails(leadId) {
    const modal = new bootstrap.Modal(document.getElementById('leadDetailsModal'));
    const content = document.getElementById('leadDetailsContent');
    
    content.innerHTML = `
        <div class="text-center py-4">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Carregando...</span>
            </div>
        </div>
    `;
    
    modal.show();
    
    fetch(`/api/leads/${leadId}/data`)
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                content.innerHTML = buildLeadDetailsHTML(data.lead, data.users);
            } else {
                content.innerHTML = `
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Erro ao carregar dados do lead.
                    </div>
                `;
            }
        })
        .catch(error => {
            console.error('Erro:', error);
            content.innerHTML = `
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Erro ao carregar dados do lead.
                </div>
            `;
        });
}

function buildLeadDetailsHTML(lead, users) {
    const interacoesHTML = lead.interacoes.map(i => `
        <div class="interaction-item mb-3 p-3" style="background: rgba(255,255,255,0.05); border-radius: 8px;">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <span class="badge bg-primary">${i.tipo}</span>
                    <small class="text-muted ms-2">${i.created_at} - ${i.user_name}</small>
                </div>
            </div>
            <p class="mb-0 mt-2">${i.descricao}</p>
        </div>
    `).join('') || '<p class="text-muted">Nenhuma interação registrada.</p>';
    
    const convertButton = !lead.convertido ? `
        <button type="button" class="btn btn-success" onclick="convertToClient(${lead.id})">
            <i class="fas fa-check-circle me-1"></i>Converter em Cliente
        </button>
    ` : '<span class="badge bg-success"><i class="fas fa-check me-1"></i>Convertido</span>';
    
    return `
        <div class="row">
            <div class="col-md-8">
                <h5 class="mb-3"><i class="fas fa-user me-2"></i>${lead.nome}</h5>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <p><strong>Empresa:</strong> ${lead.empresa || 'N/A'}</p>
                        <p><strong>Email:</strong> ${lead.email || 'N/A'}</p>
                        <p><strong>Telefone:</strong> ${lead.telefone || 'N/A'}</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Cargo:</strong> ${lead.cargo || 'N/A'}</p>
                        <p><strong>Origem:</strong> ${lead.origem || 'N/A'}</p>
                        <p><strong>Valor Estimado:</strong> ${lead.valor_estimado ? 'R$ ' + lead.valor_estimado.toLocaleString('pt-BR', {minimumFractionDigits: 2}) : 'N/A'}</p>
                    </div>
                </div>
                <div class="mb-3">
                    <strong>Responsável:</strong> ${lead.responsavel_nome || 'Não definido'}
                </div>
                <div class="mb-3">
                    <strong>Observações:</strong>
                    <p>${lead.observacoes || 'Nenhuma observação.'}</p>
                </div>
                
                <hr class="border-secondary my-4">
                
                <h6 class="mb-3"><i class="fas fa-history me-2"></i>Timeline de Interações</h6>
                ${interacoesHTML}
                
                <div class="mt-4">
                    <h6 class="mb-3">Adicionar Nova Interação</h6>
                    <form id="addInteractionForm">
                        <div class="mb-3">
                            <label class="form-label">Tipo de Interação</label>
                            <select class="form-select" id="interactionTipo" required>
                                <option value="email">Email</option>
                                <option value="ligacao">Ligação</option>
                                <option value="reuniao">Reunião</option>
                                <option value="whatsapp">WhatsApp</option>
                                <option value="proposta_enviada">Proposta Enviada</option>
                                <option value="follow_up">Follow-up</option>
                                <option value="outro">Outro</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Descrição</label>
                            <textarea class="form-control" id="interactionDescricao" rows="3" required></textarea>
                        </div>
                        <button type="button" class="btn btn-primary" onclick="addInteraction(${lead.id})">
                            <i class="fas fa-plus me-1"></i>Adicionar Interação
                        </button>
                    </form>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3" style="background: rgba(255,255,255,0.03); border-radius: 8px;">
                    <h6 class="mb-3">Ações</h6>
                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-outline-primary" onclick="editLead(${lead.id})">
                            <i class="fas fa-edit me-1"></i>Editar Lead
                        </button>
                        ${convertButton}
                        <button type="button" class="btn btn-outline-danger" onclick="deleteLead(${lead.id})">
                            <i class="fas fa-trash me-1"></i>Deletar Lead
                        </button>
                    </div>
                </div>
            </div>
        </div>
    `;
}

function addInteraction(leadId) {
    const tipo = document.getElementById('interactionTipo').value;
    const descricao = document.getElementById('interactionDescricao').value;
    
    if (!descricao) {
        alert('Por favor, preencha a descrição da interação.');
        return;
    }
    
    fetch(`/api/leads/${leadId}/interaction`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ tipo, descricao })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('Interação adicionada com sucesso!');
            viewLeadDetails(leadId); // Recarregar detalhes
        } else {
            alert('Erro ao adicionar interação: ' + data.message);
        }
    })
    .catch(error => {
        console.error('Erro:', error);
        alert('Erro ao adicionar interação');
    });
}

function convertToClient(leadId) {
    if (!confirm('Tem certeza que deseja converter este lead em cliente?')) {
        return;
    }
    
    fetch(`/api/leads/${leadId}/convert`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('Lead convertido em cliente com sucesso!');
            location.reload();
        } else {
            alert('Erro ao converter lead: ' + data.message);
        }
    })
    .catch(error => {
        console.error('Erro:', error);
        alert('Erro ao converter lead');
    });
}

function deleteLead(leadId) {
    if (!confirm('Tem certeza que deseja deletar este lead? Esta ação não pode ser desfeita.')) {
        return;
    }
    
    fetch(`/api/leads/${leadId}`, {
        method: 'DELETE',
        headers: {
            'Content-Type': 'application/json'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('Lead deletado com sucesso!');
            const modal = bootstrap.Modal.getInstance(document.getElementById('leadDetailsModal'));
            if (modal) modal.hide();
            location.reload();
        } else {
            alert('Erro ao deletar lead: ' + data.message);
        }
    })
    .catch(error => {
        console.error('Erro:', error);
        alert('Erro ao deletar lead');
    });
}

function applyFilters() {
    const responsavel = document.getElementById('filterResponsavel').value;
    const origem = document.getElementById('filterOrigem').value;
    
    document.querySelectorAll('.lead-card').forEach(card => {
        let show = true;
        
        if (responsavel && card.dataset.responsavel != responsavel) {
            show = false;
        }
        
        if (origem && card.dataset.origem != origem) {
            show = false;
        }
        
        card.style.display = show ? 'block' : 'none';
    });
    
    updateColumnCounts();
}

function clearFilters() {
    document.getElementById('filterResponsavel').value = '';
    document.getElementById('filterOrigem').value = '';
    
    document.querySelectorAll('.lead-card').forEach(card => {
        card.style.display = 'block';
    });
    
    updateColumnCounts();
}
</script>
{% endblock %}
